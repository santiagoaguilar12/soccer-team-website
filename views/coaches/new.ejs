<% include ../partials/header %>


<div class="ui container">
    <h1>Coaches</h1>

    <form class="ui form" method="POST" action="/coaches" >
        <div>
            <h2>Personal Info</h2>
                <div class="fields">
                   <div class="field">
                        <label>First Name</label>
                        <input type="text" name="person[first_name]" placeholder="First Name">
                      </div>
                    <div class="field">
                        <label>Last Name</label>
                        <input type="text" name="person[last_name]" placeholder="Last Name">
                    </div>
                    <div class="field">
                      <label>Gender</label>
                      <div class="ui selection dropdown">
                          <input type="hidden" name="person[gender]">
                          <i class="dropdown icon"></i>
                          <div class="default text">Gender</div>
                          <div class="menu">
                              <div class="item" data-value="Male">Male</div>
                              <div class="item" data-value="Female">Female</div>
                              <div class="item" data-value="Other">Other</div>
                          </div>
                      </div>
                  </div>
                        
              </div>
              <div class="fields">
                  <div class="field">
                        <label>Role</label>
                        <input type="text" name="person[role]" value="coach" readonly>
                      </div>
                      <div class="field">
                        <label>Image Url</label>
                        <input type="text" name="person[image_url]" placeholder="Image URL">
                  </div>
              </div>
              <div class="fields">
                  <div class="field">
                        <label>Email</label>
                        <input type="Email" name="person[email]" placeholder="email">
                      </div>
                      <div class="field">
                        <label>Hometown</label>
                        <input type="text" name="person[city]" placeholder="City" >
                  </div>
                  <div class="field">
                        <label>Phone</label>
                        <input type="text" name="person[phone]" placeholder="(No symbols or spaces)">
                  </div>
              </div>
                
        </div>
        
        <div>
            <h2>Coaching Info</h2>
             <div class="fields">
                   <div class="field">
                        <label>Team</label>
                        <div class="ui selection dropdown">
                            <input type="hidden" name="coach[team]">
                            <i class="dropdown icon"></i>
                            <div class="default text">Team</div>
                            <div class="menu">
                                <div class="item" data-value="U11 Boys/Girls">U11 Boys/Girls</div>
                                <div class="item" data-value="U13 Boys/Girls">U13 Boys/Girls</div>    
                                <div class="item" data-value="U15 Boys">U15 Boys</div>
                                <div class="item" data-value="U17 Boys">U17 Boys</div>
                                <div class="item" data-value="U21 Boys">U21 Boys</div>
                                <div class="item" data-value="League 1 Men">League 1 Men</div>
                                <div class="item" data-value="U21 Women">U21 Women</div>    
                            </div>
                        </div>                      </div>
                      <div class="field">
                      <label>Coaching Role</label>
                      <div class="ui selection dropdown">
                          <input type="hidden" name="coach[coaching_role]">
                          <i class="dropdown icon"></i>
                          <div class="default text">Coaching Role</div>
                          <div class="menu">
                               <div class="item" data-value="Head Coach">Head Coach</div>
                              <div class="item" data-value="Assistant Coach">Assistant Coach</div>
                              <div class="item" data-value="Director">Director</div>
                              <div class="item" data-value="Team Manager">Team Manager</div>
                              <div class="item" data-value="Goealkeeper Coach">Goalkeeper Coach</div>
                          </div>
                      </div>
                  </div>
            </div>
            
        </div>
        
        
        
        
        
        
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<% include ../partials/footer %>
